@model Contact
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UsersLayout.cshtml";
}
<section id="contact" class="contact">
    <div class="container">
        <div class="section-title">
            <h2>Contact</h2>
        </div>
        <div class="row" data-aos="fade-in">

            <div class="col-lg-5 d-flex align-items-stretch">
                <div class="info">
                    <div class="address">
                        <i class="bi bi-geo-alt"></i>
                        <h4>Location:</h4>
                        <p>İstanbul/Kartal</p>
                    </div>

                    <div class="email">
                        <i class="bi bi-envelope"></i>
                        <h4>Email:</h4>
                        <p>plantsworld@gmail.com</p>
                    </div>

                    <div class="phone">
                        <i class="bi bi-phone"></i>
                        <h4>Call:</h4>
                        <p>0555 111 12 11</p>
                    </div>

                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d48236.41098063579!2d29.15554431623687!3d40.920663975251074!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cac4f1dd92e915%3A0x7bf91a7dd7b26dcc!2sKartal%2F%C4%B0stanbul!5e0!3m2!1str!2str!4v1712221493164!5m2!1str!2str" frameborder="0" style="border:0; width: 100%; height: 290px;" allowfullscreen></iframe>
                </div>
                
            </div>

            <div class="col-lg-7 mt-5 mt-lg-0  align-items-stretch">
                <form method="post" role="form">
                    <div class="row">
                        <div class="form-group">
                            <label for="name"><b>Your Name</b></label>
                            <input type="text" class="form-control" required asp-for="yourname" autocomplete="off">
                            <br />

                            <label for="name"><b>Your Email</b></label>
                            <input type="email" class="form-control" required asp-for="youremail" autocomplete="off">
                            <br />

                            <label for="name"><b>Subject</b></label>
                            <input type="text" class="form-control" required asp-for="subject" autocomplete="off">
                            <br />

                            <label for="name"><b>Message</b></label>
                            <textarea class="form-control" rows="10" required asp-for="message" autocomplete="off"></textarea>
                        </div>
                    <div class="my-3">
                        <div class="loading">Loading</div>
                        <div class="error-message"></div>
                        <div class="sent-message">Your message has been sent. Thank you!</div>
                    </div>
                    <div class="text-center"><button type="submit" class="btn btn-dark">Send Message</button></div>
                    </div>
                </form>
            </div>

        </div>

    </div>
</section>