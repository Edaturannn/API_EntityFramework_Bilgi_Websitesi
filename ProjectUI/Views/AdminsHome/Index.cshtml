                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.GaleryCount</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-calendar fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="col-xl-3">
        <div class="card border-left-primary shadow h-100 py-2">
