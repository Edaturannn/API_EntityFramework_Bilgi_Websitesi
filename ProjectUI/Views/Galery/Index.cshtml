@model List<Galery>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminsLayout.cshtml";
    int count = 0;
}

<div>
    <h1 style="text-align:center;">Galery</h1>

    <table class="table table-hover">
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Imges</th>

            <th>Update</th>
            <th>Delete</th>
        </tr>

        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.title</td>
           
                <td><img src="@item.img" style="height:100px; width:100px;" /></td>
                <td><a href="/Galery/UpdateGalery/@item.galeryid" class="btn btn-outline-warning">Update</a></td>
                <td><a href="/Galery/DeleteGalery/@item.galeryid" class="btn btn-outline-danger">Delete</a></td>
            </tr>
        }
    </table>
    <br />
    <a href="/Galery/CreateGalery" class="btn btn-outline-info">Add</a>
</div>





